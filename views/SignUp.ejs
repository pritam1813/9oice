<div class="mx-auto d-block w-25 p-3 user-forms">
  <h4>Sign Up</h4>
    <form action="/user/create" method="POST" class="needs-validation">
        <div class="mb-3">
            <label for="InputName" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" id="InputName" required>
          </div>
        <div class="mb-3">
          <label for="InputEmail1" class="form-label">Email address</label>
          <input type="email" name="email" class="form-control" id="InputEmail1" required>
        </div>
        <div class="mb-3">
          <label for="InputPassword1" class="form-label">Password</label>
          <input type="password" name="password" class="form-control" id="InputPassword1" required>
        </div>
        <div class="mb-3">
            <label for="InputConfirmPassword1" class="form-label">Confirm Password</label>
            <input type="password" name="confirm_password" class="form-control" id="InputConfirmPassword1" required>
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
      </form>
      <div class="d-grid gap-2 col-6 mx-auto">
        <div class="text-center">OR</div>
        <a href="/user/auth/google">
          <button class="btn btn-outline-danger" type="button"><span><i class="fa-brands fa-google"></i></span> &nbsp; &nbsp;<span>Sign Up With Google</span></button>
        </a>
        <a href="/user/auth/facebook">
          <button class="btn btn-outline-primary" type="button"><span><i class="fa-brands fa-facebook-f"></i></span> &nbsp; <span>Sign Up With Facebook</span></button>
        </a>
      </div>
</div>